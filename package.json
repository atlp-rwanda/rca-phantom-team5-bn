{
	"name": "phantom-backend",
	"version": "1.0.0",
	"description": "Elevate the public transport experience",
	"main": "src/index.ts",
	"type": "module",
	
	"scripts": {
		"migrate": "npx prisma migrate dev --name user-entity --create-only",
		"push": "npx prisma db push",
		"seed":"esbuild prisma/seed.ts --outfile=node_modules/tmp-seed.cjs --bundle --format=cjs --external:prisma --external:@prisma/client && node node_modules/tmp-seed.cjs --preview-feature",
		"start": "tsc && node dist/index",
		"dev": "tsc && nodemon dist/index",
		"test": "tsc && nyc mocha",
		"lint": "eslint src",
		"ts-node": "ts-node --compiler-options '{\"module\":\"CommonJS\"}'"
	},
	"mocha": {
		"extension": [
			"ts"
		],
		"spec": "src/test/**/*.spec.ts",
		"require": "ts-node/register"
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"reporter": [
			"text-summary",
			"lcov"
		],
		"all": "true",
		"exclude": [
			"dist",
			"coverage"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Stackup-Rwanda/phantom-backend.git"
	},
	"keywords": [
		"buses",
		"transport",
		"typescript"
	],
	"author": "ceelogre",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Stackup-Rwanda/phantom-backend/issues"
	},
	"homepage": "https://github.com/Stackup-Rwanda/phantom-backend#readme",
	"dependencies": {
		"@babel/register": "^7.21.0",
		"@prisma/client": "^4.11.0",
		"dotenv": "^16.0.3",
		"express": "^4.17.1",
		"pg": "^8.10.0",
		"pg-hstore": "^2.3.4",
		"prisma": "^4.11.0",
		"reflect-metadata": "^0.1.13",
		"sequelize": "^6.29.3",
		"sequelize-typescript": "^2.1.5"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/chai": "^4.3.4",
		"@types/express": "^4.17.17",
		"@types/mocha": "^8.0.3",
		"@types/node": "^13.13.52",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/validator": "^13.7.13",
		"@typescript-eslint/eslint-plugin": "^4.0.1",
		"@typescript-eslint/parser": "^4.0.1",
		"assert": "^2.0.0",
		"chai": "^4.2.0",
		"esbuild": "^0.17.11",
		"eslint": "^7.8.1",
		"mocha": "^10.2.0",
		"nyc": "^15.1.0",
		"sequelize-cli": "^6.6.0",
		"source-map-support": "^0.5.19",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^2.0.0",
		"tsx": "^3.12.5",
		"typescript": "^4.9.5"
	}
}
