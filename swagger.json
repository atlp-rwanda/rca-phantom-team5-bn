  "definitions": {
    "Users": {
      "type": "object",
      "properties": {
        "role": {
          "type": "string",
          "example": "[operator, driver]"
        },
        "fname": {
          "type": "string",
          "example": "John"
        },
        "lname": {
          "type": "string",
          "example": "Doe"
        },
        "email": {
          "type": "string",
          "required": true,
          "example": "your-email@gmail.com"
        },
        "driver_licence": {
          "type": "array",
          "required": true,
          "example": "['A','B','C','D','E','F']"
        },
